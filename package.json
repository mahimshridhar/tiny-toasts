{
  "name": "tiny-toasts",
  "version": "0.1.3",
  "description": "Simple toast library - early development",
  "main": "./dist/tiny-toasts.umd.js",
  "module": "./dist/tiny-toasts.esm.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/tiny-toasts.umd.js",
  "jsdelivr": "./dist/tiny-toasts.umd.js",
  "exports": {
    ".": {
      "import": "./dist/tiny-toasts.esm.js",
      "require": "./dist/tiny-toasts.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/tiny-toasts.css": "./dist/tiny-toasts.css"
  },
  "scripts": {
    "dev": "webpack serve --mode development --config webpack.config.dev.js",
    "build": "npm run clean && webpack --mode production --config webpack.config.prod.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "jest --coverage"
  },
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist"
  ],
  "keywords": [
    "toast",
    "notification",
    "alert"
  ],
  "author": "Mahim M S",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-css-modules": "^2.1.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.3.0",
    "mini-css-extract-plugin": "^2.9.4",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-bundle-analyzer": "^5.0.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "repository": {
    "url": "https://github.com/mahimshridhar/tiny-toasts.git"
  }
}
